extends layout

block content
  h1
    i.material-icons.medium.left lock_open
    |Login
  //- LOGIN FORM 
  form(action="/login", method="post")
    .row
      .input-field.col.s12
        input.validate#email(name="email", type="email")
        label(for='email') Email
    .row
      .input-field.col.s12
        input.validate#password(name="password", type="password")
        label(for='password') Password
    button.waves-effect.waves-light.btn(type="submit") Login
  p Need an account? 
      a(href="/signup") Signup
  p Or go 
      a(href="/") home